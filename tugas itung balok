#include <iostream>
using namespace std;

int main ()
{
    int Panjang;
    int Lebar;
    int Tinggi;
    int Luas;
    int Volume;

    cout << "Panjangnya berapa? ";
    cin >> Panjang;

    cout << "Lebarnya berapa? ";
    cin >> Lebar;

    cout << "Tingginya berapa? ";
    cin >> Tinggi;

    Volume = Panjang*Lebar*Tinggi;
    Luas= (2*Panjang*Lebar)+(2*Panjang*Tinggi)+(2*Lebar*Tinggi);

    cout << "Volume dan Luas Permukaan Balok"<<endl;
    cout << "Volume           : "<<Volume<<endl;;
    cout << "Luas Permukaan   : "<<Luas<<endl;

    return 0;
}
